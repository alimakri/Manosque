<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:MauiApp1.Components"
             x:Class="Manosque.Maui.Pages.SitesPage">
    <StackLayout>
        <ScrollView  >
            <VerticalStackLayout >
                <DatePicker x:Name="myDatePicker" MinimumDate="01/01/2025" TextColor="DarkCyan" />
                <CollectionView x:Name="SitesCollectionView">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <VerticalStackLayout>
                                <views:CardView
                                Execution="{Binding Libelle}"                                  
                                Date="{Binding Date}"                                  
                                Tache="{Binding Tache}"
                                Statut="{Binding Statut}"                                
                                BandeauEnabled="True"
                                CardImage="&#xf1f1;"/>
                            </VerticalStackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </ScrollView>
    </StackLayout>
</ContentPage>
