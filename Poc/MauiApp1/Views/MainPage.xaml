<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:MauiApp1.Components"
             x:Class="MauiApp1.Views.MainPage" >
    <ScrollView>
    <CollectionView ItemsSource="{Binding Sites}">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <VerticalStackLayout >
                        <views:CardView 
         CardNumber="{Binding Libelle}"                                  
         ExpirationDate="{Binding Tache}"
         CardValidationCode="{Binding Statut}"
         BandeauEnabled="True"
         CardImage="&#xf1f1;"/>
                    </VerticalStackLayout>
            </DataTemplate>
        </CollectionView.ItemTemplate>
        </CollectionView>
    </ScrollView>
</ContentPage>
